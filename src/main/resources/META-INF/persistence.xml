<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="PersistenceUnit">
		<properties>
		
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="false" />
			<property name="datanucleus.schema.validateConstraints" value="false" />
			
			<property name="javax.jdo.option.ConnectionURL" value="mongodb:/dnamsdb" />
            <property name="javax.jdo.option.Mapping" value="mongodb"/>			
		</properties>
	</persistence-unit>
</persistence>